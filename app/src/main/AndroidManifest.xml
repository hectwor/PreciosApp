<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hect.preciosapp">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.hardware.camera" android:required="true"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".PricesActivity"
            android:label="@string/title_activity_prices"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".AddProductActivity"
            android:label="@string/title_activity_add"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".ModifyProductActivity"
            android:label="@string/title_activity_modify"
            android:parentActivityName=".MainActivity">

        </activity>
    </application>

</manifest>